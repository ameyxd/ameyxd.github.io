{
  "name": "porfolio",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "scripts": {
    "format-posts": "node scripts/format-posts.js",
    "dev": "pnpm exec concurrently \"pnpm blog watch-images\" \"next dev\"",
    "build": "pnpm format-posts && pnpm process-images || true && next build",
    "start": "next start",
    "lint": "next lint",
    "export": "next build",
    "blog": "cross-env NODE_OPTIONS=\"--loader ts-node/esm\" ts-node src/lib/cli/blog.ts",
    "process-images": "pnpm blog process-images",
    "watch-images": "chokidar 'content/images/**/*' -c 'pnpm process-images' -i '/(^|\\\\)\\\\../'",
    "build:test": "next build",
    "test:all": "next build",
    "ci:local": ".\\scripts\\local-ci.bat"
  },
  "dependencies": {
    "@mdx-js/loader": "^3.1.0",
    "@mdx-js/react": "^3.1.0",
    "@next/mdx": "^15.0.2",
    "@radix-ui/react-avatar": "^1.0.4",
    "@radix-ui/react-icons": "^1.3.0",
    "@radix-ui/react-separator": "^1.1.0",
    "@radix-ui/react-slot": "^1.0.2",
    "@radix-ui/react-tooltip": "^1.0.7",
    "@types/mdx": "^2.0.13",
    "class-variance-authority": "^0.7.0",
    "clsx": "^2.1.1",
    "framer-motion": "^11.2.10",
    "gray-matter": "^4.0.3",
    "lucide-react": "^0.395.0",
    "next": "14.2.15",
    "next-mdx-remote": "^5.0.0",
    "next-themes": "^0.3.0",
    "react": "^18",
    "react-dom": "^18",
    "react-markdown": "^9.0.1",
    "rehype-autolink-headings": "^7.1.0",
    "rehype-pretty-code": "^0.13.2",
    "rehype-slug": "^6.0.0",
    "rehype-stringify": "^10.0.0",
    "remark-gfm": "^4.0.0",
    "remark-parse": "^11.0.0",
    "remark-rehype": "^11.1.0",
    "shiki": "^1.7.0",
    "tailwind-merge": "^2.3.0",
    "tailwindcss-animate": "^1.0.7",
    "unified": "^11.0.4",
    "unist-util-visit": "^5.0.0"
  },
  "devDependencies": {
    "@tailwindcss/typography": "^0.5.13",
    "@types/node": "^20",
    "@types/react": "^18",
    "@types/react-dom": "^18",
    "@types/sharp": "^0.32.0",
    "commander": "^12.1.0",
    "concurrently": "^9.1.0",
    "cross-env": "^7.0.3",
    "eslint": "^8",
    "eslint-config-next": "14.2.4",
    "postcss": "^8",
    "sharp": "^0.33.5",
    "slugify": "^1.6.6",
    "tailwindcss": "^3.4.1",
    "ts-node": "^10.9.2",
    "typescript": "^5"
  }
}
